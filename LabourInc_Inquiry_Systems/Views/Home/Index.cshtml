@{
    ViewData["Title"] = "Welcome";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LaborInc</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .hero {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 4rem 2rem;
        }

        .hero-text h1 {
            font-weight: bold;
            font-size: 2.5rem;
        }

        .hero-text p {
            margin-top: 1rem;
            color: #555;
        }

        .btn-primary-custom {
            background-color: #ff6347;
            border: none;
        }

        .btn-outline-custom {
            border-color: #ff6347;
            color: #000;
        }

        .services .card {
            border: 1px solid #ff6347;
            transition: transform 0.3s;
        }

            .services .card:hover {
                transform: translateY(-5px);
            }

        .footer {
            padding: 2rem;
            text-align: center;
            font-size: 0.9rem;
            color: #777;
        }

            .footer a {
                margin: 0 1rem;
                color: #777;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .social-icons a {
            margin: 0 0.5rem;
            color: #555;
            font-size: 1.2rem;
        }

            .social-icons a:hover {
                color: #ff6347;
            }

        .placeholder-img {
            background-color: #ff6347;
            width: 100%;
            height: 250px;
        }

        .hero
        {
            flex-direction: column;
            text-align: center;
        }

        .hero .placeholder-img {
            margin-top: 2rem;
            height: 200px;
        }

        
    </style>
</head>
<body>
    

    <section class="hero container">
        <div class="hero-text">
            <h1>LaborInc - Labor Solutions</h1>
            <p>
                Labourinc provides expert labour consultancy, statutory registrations, payroll management,
                and dispute resolution services tailored to businesses of all sizes. With a commitment
                to compliance and efficiency, we help you focus on growth while we handle your workforce
                and legal obligations.
            </p>
            <div class="mt-3">
                <a class="btn btn-primary-custom me-2" href="@Url.Action("Services", "Home")">Our Services</a>
                <a class="btn btn-outline-custom" href=" /Inquiry/Submit">Submit an Inquiry</a>
            </div>
        </div>
        <div>
            <img src="@Url.Content("~/images/LaborInc_Logo.jpg")" alt="Logo" />
        </div>
    </section>

    <section class="services container my-5">
        <h3 class="text-center mb-2">Our Services</h3>
        <p class="text-center text-muted mb-4">LabourInc – Your Trusted Partner in Workforce and Compliance Solutions</p>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card p-3 h-100">
                    <div class="mb-2"><i class="bi bi-briefcase-fill fs-3 text-danger"></i></div>
                    <h5 class="card-title">Payroll & Statutory Registration</h5>
                    <p class="card-text">We manage payroll processing, UIF, PAYE, and statutory registrations to ...</p>
                    
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 h-100">
                    <div class="mb-2"><i class="bi bi-file-earmark-text-fill fs-3 text-danger"></i></div>
                    <h5 class="card-title">Employment Contracts & HR Policies</h5>
                    <p class="card-text">Drafting and reviewing employment contracts, HR policies, and workplace procedures ...</p>
                    
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 h-100">
                    <div class="mb-2"><i class="bi bi-gavel fs-3 text-danger"></i></div>
                    <h5 class="card-title">Dispute Resolution & CCMA Representation</h5>
                    <p class="card-text">Professional guidance and representation in employee disputes, disciplinary hearings, ...</p>
                    
                </div>
            </div>
        </div>
    </section>

    <footer class="footer bg-light mt-5">
        <div class="container">
            <div class="row mb-3">
                <div class="col-md-3 placeholder-img" style="height: 50px;"></div>
                <div class="col-md-9 mt-2">
                    <a href="@Url.Action("Index", "Home")" ">Home</a>
                    <a href="@Url.Action("Services", "Home")">Services</a>
                    <a href="@Url.Action("Admin", "Login")" ">Admin Login</a>
                    <a href="/Inquiry/Submit">Submit an Inquiry</a>
                </div>
            </div>
            <div class="social-icons mb-2">
                <a href="#"><i class="bi bi-instagram"></i></a>
                <a href="#"><i class="bi bi-facebook"></i></a>
                <a href="#"><i class="bi bi-twitter"></i></a>
            </div>
            <p>© 2024 LaborInc. All rights reserved. <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html>

